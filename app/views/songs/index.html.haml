- @active_tab = :music
- title 'Music'

- if current_user and current_user.admin?
  = link_to 'New', new_song_path
  
%table
  - @songs.each do |song|
    %tr
      %td= h song.title
      %td= h song.description
      %td= h song.mp3.url
      - if current_user and current_user.admin?
        %td= link_to 'Edit', edit_song_path(song)
        %td= link_to 'Delete', song, 
          :confirm => "Are you sure you want to delete #{song.title}?", 
          :method => :delete
