%ul
  %li= link_to 'Home',    root_path,                  :class => active_when(:home)
  %li= link_to 'About',   abouts_path,                :class => active_when(:about)
  %li= link_to 'Photos',  band_photos_path,           :class => active_when(:photos)
  %li= link_to 'Blog',    blog_posts_path,            :class => active_when(:blog)
  %li= link_to 'Contact', contact_informations_path,  :class => active_when(:contact)
  %li= link_to 'Links',   links_path,                 :class => active_when(:links)
  %li= link_to 'News',    news_stories_path,          :class => active_when(:news)
  %li= link_to 'Press',   press_stories_path,         :class => active_when(:press)
  %li= link_to 'Shows',   shows_path,                 :class => active_when(:shows)
  %li= link_to 'Music',   songs_path,                 :class => active_when(:songs)
  - if current_user
    %li= link_to 'Edit Profile', edit_user_path(:current)
    %li= link_to 'Logout', logout_path
  - else
    %li= link_to 'Register', new_user_path
    %li= link_to 'Login', login_path
.clear
