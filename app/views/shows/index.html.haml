- @active_tab = :shows
- title 'Shows'

- if current_user and current_user.admin?
  = link_to 'New', new_show_path
  
%table
  %tr
    %th Title
    %th Description
    %th Date and Time
  - @shows.each do |show|
    %tr
      %td= h show.title
      %td= h show.description
      %td
        = h show.date.strftime("%A, %B %d, %Y")
        %br/
        = h show.time.strftime("%I:%M %p")
      - if current_user and current_user.admin?
        %td= link_to 'Edit', edit_show_path(show)
        %td= link_to 'Delete', show, :confirm => "Are you sure you want to delete #{show.title}?", :method => :delete

