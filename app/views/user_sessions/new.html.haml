- @active_tab = :login
- title "Login"

- form_for @user_session do |f|
  = f.error_messages

  = f.label :email
  = f.text_field :email
  
  = f.label :password
  = f.password_field :password
  
  = f.check_box :remember_me
  = f.label :remember_me
  
  = f.submit "Login", :class => 'submit'
  = link_to "Cancel", root_path, :class => 'cancel'
