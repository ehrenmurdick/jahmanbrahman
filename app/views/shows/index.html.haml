- @active_tab = :shows
- title 'Shows'

- if current_user.try :admin?
  = link_to 'New', new_show_path

- @shows.each do |show|
  .section
    %h2= h show.title
    %p= h show.description
    %p= h show.date.strftime("%A, %B %d, %Y")
    %p= h show.time.strftime("%I:%M %p")
    - if current_user.try :admin?
      = link_to 'Edit', edit_show_path(show)
      = link_to 'Delete', show, 
        :confirm => "Are you sure you want to delete #{show.title}?", 
        :method => :delete

