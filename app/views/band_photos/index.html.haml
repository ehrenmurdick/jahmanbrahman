- @active_tab = :photos
- title 'Photos', true

%table
  %tr
    %th Title
    %th Description
    %th URL
  - @band_photos.each do |band_photo|
    %tr
      %td= h band_photo.title
      %td= h band_photo.description
      %td= h band_photo.file.url
      %td= link_to 'Show', band_photo
      %td= link_to 'Edit', edit_band_photo_path(band_photo)
      %td= link_to 'Delete', band_photo, :confirm => "Are you sure you want to delete the photo titled '#{band_photo.title}'?", :method => :delete

%br/
= link_to 'New', new_band_photo_path