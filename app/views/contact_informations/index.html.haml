- @active_tab = :contact
- title 'Contact'

- if current_user and current_user.admin?
  = link_to 'New', new_contact_information_path, :class => 'new'

- @contact_informations.each do |contact_information|
  .section
    %h2= h contact_information.title
    - if current_user and current_user.admin?
      = link_to 'Edit', edit_contact_information_path(contact_information), :class => 'edit'
      = link_to 'Delete', contact_information, :class => 'delete',
        :confirm => "Are you sure you want to delete #{contact_information.title}?", 
        :method => :delete
    %p= contact_information.description